{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "types": ["node"],
    "noEmit": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "scripts"]
}

